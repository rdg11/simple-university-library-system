<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="416.0" prefWidth="383.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javathree.librarysystem.newItemController">
   <children>
      <Label text="New Items" />
      <Label prefHeight="32.0" prefWidth="334.0" text="Collection">
         <graphic>
            <ChoiceBox fx:id="collection" prefHeight="30.0" prefWidth="250.0" />
         </graphic>
      </Label>
      <Label prefHeight="32.0" prefWidth="334.0" text="Type">
         <graphic>
            <ChoiceBox fx:id="type" prefHeight="30.0" prefWidth="250.0" />
         </graphic>
      </Label>
      <TextField fx:id="title" promptText="Title" />
      <DatePicker fx:id="pub_date" prefHeight="8.0" prefWidth="344.0" promptText="Publication Date" />
      <TextField fx:id="authors" promptText="Author(s) (comma separated list)" />
      <TextField fx:id="isbn" promptText="13-Digit ISBN (for books and DVDs) " />
      <TextField fx:id="issn" promptText="8-Digit ISSN (for journals and newspapers)" />
      <Button mnemonicParsing="false" onAction="#submitNewItem" text="Submit" />
      <Text fx:id="message" />
      <Button mnemonicParsing="false" onAction="#returnNewItem" text="Return" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
