<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="133.0" prefWidth="259.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javathree.librarysystem.removeCollectionController">
   <children>
      <Label text="Remove Collection" />
      <TextField fx:id="collectionID" promptText="Collection ID" />
      <Label fx:id="statusLabel" visible="false" text="Label" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="submitRemoveCollection" mnemonicParsing="false" onAction="#removeCollection" text="Submit" />
          <Button mnemonicParsing="false" onAction="#switchToPrimary" text="Return" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
